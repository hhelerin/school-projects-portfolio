@model IEnumerable<App.Domain.OrderItem>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Order)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DetailNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LengthMm)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.WidthMm)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HeightMm)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Area)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LinearMeter)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Amount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Details)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Order!.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DetailNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LengthMm)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.WidthMm)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HeightMm)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Area)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LinearMeter)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Amount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Details)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
