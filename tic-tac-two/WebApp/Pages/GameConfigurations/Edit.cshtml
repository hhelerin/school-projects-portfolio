@page
@using GameBrain
@using Microsoft.AspNetCore.Mvc.TagHelpers
@model WebApp.Pages.GameConfigurations.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>GameConfiguration</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="GameConfiguration.Id" />
            <div class="form-group">
                <label asp-for="GameConfiguration.Name" class="control-label"></label>
                <input asp-for="GameConfiguration.Name" class="form-control" />
                <span asp-validation-for="GameConfiguration.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="GameConfiguration.BoardWidth" class="control-label"></label>
                <input asp-for="GameConfiguration.BoardWidth" class="form-control" />
                <span asp-validation-for="GameConfiguration.BoardWidth" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="GameConfiguration.BoardHeight" class="control-label"></label>
                <input asp-for="GameConfiguration.BoardHeight" class="form-control" />
                <span asp-validation-for="GameConfiguration.BoardHeight" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="GameConfiguration.GridSize" class="control-label"></label>
                <input asp-for="GameConfiguration.GridSize" class="form-control" />
                <span asp-validation-for="GameConfiguration.GridSize" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="GameConfiguration.MovesPerGame" class="control-label"></label>
                <input asp-for="GameConfiguration.MovesPerGame" class="form-control" />
                <span asp-validation-for="GameConfiguration.MovesPerGame" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="GameConfiguration.WinCondition" class="control-label"></label>
                <input asp-for="GameConfiguration.WinCondition" class="form-control" />
                <span asp-validation-for="GameConfiguration.WinCondition" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="GameConfiguration.MovePieceOrGridAfterNMoves" class="control-label"></label>
                <input asp-for="GameConfiguration.MovePieceOrGridAfterNMoves" class="form-control" />
                <span asp-validation-for="GameConfiguration.MovePieceOrGridAfterNMoves" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="GameConfiguration.PieceCount" class="control-label"></label>
                <input asp-for="GameConfiguration.PieceCount" class="form-control" />
                <span asp-validation-for="GameConfiguration.PieceCount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
