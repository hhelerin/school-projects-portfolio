@page
@model WebApp.Pages.GameConfigurations.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Game configuration details</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.GameConfiguration[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.GameConfiguration[0].BoardWidth)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.GameConfiguration[0].BoardHeight)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.GameConfiguration[0].GridSize)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.GameConfiguration[0].MovesPerGame)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.GameConfiguration[0].WinCondition)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.GameConfiguration[0].MovePieceOrGridAfterNMoves)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.GameConfiguration[0].PieceCount)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.GameConfiguration) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BoardWidth)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BoardHeight)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GridSize)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MovesPerGame)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.WinCondition)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MovePieceOrGridAfterNMoves)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PieceCount)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a>
                <a asp-page="./Details" asp-route-id="@item.Id">Details</a> 
                <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
